# Databricks Connection Configuration
# Copy this file to .env and fill in your actual values

# Databricks Workspace URL (e.g., https://adb-1234567890123456.7.azuredatabricks.net)
DATABRICKS_HOST=

# Personal Access Token or Service Principal Token
DATABRICKS_TOKEN=

# Cluster Configuration (Optional - will auto-create if not provided)
DATABRICKS_CLUSTER_ID=

# Database/Catalog Configuration
CATALOG_NAME=hive_metastore
SCHEMA_NAME_BRONZE=bronze
SCHEMA_NAME_SILVER=silver
SCHEMA_NAME_GOLD=gold

# Data Generation Configuration
SAMPLE_DATA_SEED=42
NUM_MATERIALS=200
NUM_BATCHES=150
NUM_SAMPLES=500
NUM_PROCESS_RESULTS=10000
NUM_ANALYTICAL_RESULTS=10000
NUM_GENEALOGY_RECORDS=8000

# Deployment Configuration
ENVIRONMENT=dev
DEPLOYMENT_MODE=full
ENABLE_DATA_QUALITY_CHECKS=true
ENABLE_OPTIMIZATION=true

# GitHub Actions (Set these as GitHub Secrets, not in .env)
# DATABRICKS_HOST
# DATABRICKS_TOKEN
